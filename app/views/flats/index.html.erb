<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Our flats", flats_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Add flat", new_flat_path, class: "nav-link" %>
      </li>
    </ul>
  </div>
</div>
<br>

<div>
  <h2>All our Flats</h2>
</div>

<br>

<div class="container">
<% @flats.each do |flat| %>
  <div class="cards row justify-content-center">
    <div class="card-infos">
      <div>
        <h4><%= link_to flat.name, flat_path(flat)%></h4>
        <p><%= flat.description %></p>
      </div>
      <p><i class="fas fa-users"></i> <%= flat.number_of_guests %> <i class="fas fa-pound-sign"></i> <%= flat.price_per_night %></p>
    </div>
  </div>
  <% end %>
</div>
